extends ../layout.pug

block content 
    .d-flex.flex-row.mx-auto.content
        .profile-container.container-fluid 
            include includes/profile.pug
        .tweets-container.flex-fill.container-fluid.tweets-list 
            if tweets 
                each tweet in tweets 
                    .card.tweet-element
                        .card-body=tweet.content
            